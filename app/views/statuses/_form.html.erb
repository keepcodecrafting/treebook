<%= simple_form_for(@status, html: {class: "form-horizontal"}) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
        <%= f.label :user_id, "User", class: "col-md-1 control-label" %>
        <div class="col-md-5">
          <%= f.label :user_id, current_user.full_name, class: "control-label" %>
          <%= f.hidden_field :user_id, class: "form-control", value: current_user.id %>
        </div>
  </div>

  <div class="form-group">
        <%= f.label :content, "Content", class: "col-md-1 control-label" %>
        <div class="col-md-5">
          <%= f.text_area :content, class: "form-control" %>
        </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-1 col-md-4">
      <%= f.submit "Create Status", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
